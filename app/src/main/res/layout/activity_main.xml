<?xml version="1.0" encoding="utf-8"?>
<!-- это макет для портретной (книжной) ориентации -->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.geekbrains.cityinfo.MainActivity">
    <!-- в портретной (книжной) ориентации у активити только один фрагмент -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment android:name="ru.geekbrains.cityinfo.CitiesFragment"
            android:id="@+id/cities"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>